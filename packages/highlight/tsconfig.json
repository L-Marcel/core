{
  "extends": "@lmarcel/ts-config/react",
  "include": ["src"],
  "exclude": [
    "node_modules", 
  ],
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "resolveJsonModule": true
  }
}